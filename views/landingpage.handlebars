<h1 class="text-center">Post_</h1>


<section class="column align-center post-output">
    <h1>this is the landing page</h1>
    {{#each posts}}
        <div class="post">
            <h3 class="text-center">{{text}}</h3>
            <div class="row justify-between">
                <p>{{date}}</p>
                <p>By: {{author.email}}</p>
            </div>
        </div>
    {{#each}}
</section>